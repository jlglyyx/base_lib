<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="@color/colorBar"
        android:id="@+id/view_line_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_content"
        android:text="亿亿亿亿"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="@+id/gridNinePictureView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.yang.lib_common.widget.GridNinePictureView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:maxChild="6"
        app:layout_constraintLeft_toRightOf="@+id/view_line_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:id="@+id/gridNinePictureView"/>
    <TextView
        android:id="@+id/tv_time"
        android:text="2020-10-11 12:30:12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="@+id/gridNinePictureView"
        app:layout_constraintTop_toBottomOf="@+id/gridNinePictureView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:background="@color/lightgrey"
        android:id="@+id/view_line_bottom"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/view_line_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

