<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_search_dialog_bg"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:id="@+id/iv_image"
        android:src="@drawable/iv_bear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        android:textColor="@color/red"
        android:text="￥999"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        >
    </com.zhy.view.flowlayout.TagFlowLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="购买数量"
        android:id="@+id/tv_num_content"
        app:layout_constraintTop_toTopOf="@+id/tv_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add"
        app:layout_constraintTop_toBottomOf="@+id/flowLayout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/tv_reduce"
        android:background="@drawable/shape_user_input_bg"
        app:layout_constraintRight_toLeftOf="@+id/tv_num"
        android:paddingVertical="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintTop_toBottomOf="@+id/flowLayout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/tv_num"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintRight_toLeftOf="@+id/tv_add"
        app:layout_constraintTop_toTopOf="@+id/tv_add"
        app:layout_constraintBottom_toBottomOf="@+id/tv_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/tv_add"
        android:paddingVertical="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_15"
        android:background="@drawable/shape_user_input_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowLayout"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_add"
        android:text="立即兑换" />

</androidx.constraintlayout.widget.ConstraintLayout>