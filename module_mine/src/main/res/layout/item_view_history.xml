<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:text="这是个简单的标题"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="0dp"
        android:text="这是个简单的描述这是个简单这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述的描述这是个简单的描述这是个简单的描述这是个简单的描述这是个简单的描述"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/tv_type"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#视频"
        android:id="@+id/tv_type"
        android:textColor="@color/turquoise"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/shape_flaw_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>